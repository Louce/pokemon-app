# Use exact versions for dependencies
save-exact=true

# Disable audit warnings to keep CI clean
audit=false

# Increase network timeout for slower connections
network-timeout=100000

# Set default version for newly installed packages
save-prefix=''

# Don't generate package-lock.json if using yarn
package-lock=false

# Set strict-ssl for security
strict-ssl=true

# Use legacy peer deps for React 19 compatibility
legacy-peer-deps=true 